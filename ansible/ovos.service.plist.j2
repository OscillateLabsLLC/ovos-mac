<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.ovos.{{ item }}</string>
    <key>ProgramArguments</key>
    <array>
        <string>{{ ansible_env.HOME }}/.local/bin/poetry</string>
        <string>run</string>
        <string>{{ ovos_commands[item] }}</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>WorkingDirectory</key>
    <string>{{ ovos_repo_dest }}</string>
    <key>StandardOutPath</key>
    <string>{{ ovos_log_dir }}/{{ item }}.log</string>
    <key>StandardErrorPath</key>
    <string>{{ ovos_log_dir }}/{{ item }}.log</string>
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>{{ ansible_env.HOME }}/.local/bin:/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:{{ ovos_repo_dest }}/.venv/bin</string>
        <key>PYTHONPATH</key>
        <string>{{ ovos_repo_dest }}</string>
    </dict>
</dict>
</plist>
